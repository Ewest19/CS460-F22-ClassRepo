@model IEnumerable<AuctionHouse.Models.Item>

@{
    ViewData["Title"] = "Items";
}

<h1 class="text-center mb-5">Current Auction Items</h1>


<table class="table">
    <thead>
        <tr>
            <th>Item Name</th><th>Seller</th><th>Description</th><th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>
                <td>@item.Name</td><td>@(item?.Seller?.FullName() ?? "")</td><td>@item.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle me-2"></i>Add a new Item!</a>
